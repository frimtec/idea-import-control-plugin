<idea-plugin require-restart="true">
    <id>com.github.frimtec.idea-import-control-plugin</id>
    <name>Import Control</name>
    <vendor email="frimtec@gmx.ch" url="https://github.com/frimtec">frimTEC</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <localInspection language="JAVA"
                         displayName="Import/reference of module private classes"
                         groupName="Visibility"
                         groupPath="Java"
                         enabledByDefault="false"
                         level="ERROR"
                         implementationClass="com.github.frimtec.idea.plugin.importcontrol.ImportControlInspection"/>
    </extensions>
</idea-plugin>
